@model IEnumerable<Rh.Presentation.Web.UI.ViewModels.TecnologiaViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Tecnologias</h2>

<p>
    @Html.ActionLink("Cadastrar nova tecnologia", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TecnologiaId }) |
            @Html.ActionLink("Details", "Details", new { id=item.TecnologiaId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TecnologiaId })
        </td>
    </tr>
}

</table>
